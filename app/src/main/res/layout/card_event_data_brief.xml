<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/event_name_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Founders Meetup 3.0"
            android:textSize="@dimen/event_name"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="13dp"/>

        <TextView
            android:id="@+id/event_time_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:00 pm"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/event_name_brief"
            app:layout_constraintTop_toBottomOf="@id/event_name_brief"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/event_location_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alacrity India Innovation Centre"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/event_time_brief"
            app:layout_constraintTop_toBottomOf="@id/event_name_brief"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>